@model ChatMessage

<form asp-action="Addmessage" asp-controller="Message" method="post">
    <input type="hidden" asp-for="UserId" value="@Model.UserId">
    <input type="hidden" asp-for="EventId" value="@Model.EventId">

    <div class="mb-3">
        <label class="form-label" asp-for="Message"></label>
        <textarea class="form-control" rows="3" placeholder="Type your message" asp-for="Message"></textarea>
        <span class="text-danger" asp-validation-for="Message"></span>
    </div>
    <button class="btn btn-primary" type="submit">Send Message</button>
</form>
