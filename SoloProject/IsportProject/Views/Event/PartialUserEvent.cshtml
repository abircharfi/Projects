@model List<Event>
@if (Model.Count == 0)
{
    <h3 class="bg-warning text-center">There's no Events For Today</h3>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Location Name</th>
                <th>Attendees</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currentEvent in Model)
            {
                
                    <tr>
                        <td>
                            <a asp-action="showOne" asp-controller="Event" asp-route-EventId="@currentEvent.EventId">@currentEvent.EventName</a>
                        </td>
                        <td>@currentEvent.Location</td>
                        <td>@currentEvent.Team.Count / @currentEvent.AttendeesNumber</td>
                        <td>@currentEvent.EventDate.ToString("h:mm tt")</td>
                    </tr>
                
            }
        </tbody>
    </table>
}
